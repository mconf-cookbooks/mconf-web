  CacheSocache shmcb
  CacheSocacheMaxSize <%= node['mconf-web']['apache']['cache']['maxsize'] %>
  CacheEnable socache "/"
  CacheHeader on
  <% node['mconf-web']['apache']['cache']['locations'].each do |location| %>
  <LocationMatch "<%= location %>">
    CacheEnable socache
    CacheHeader on
    Header unset Set-Cookie
    RequestHeader unset Cookie
  </LocationMatch>
  <% end %>
